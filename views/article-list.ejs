<table class="admin-article-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Author</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% articles.forEach((article) => { %>
      <tr class="admin-article-item">
        <td class="admin-article-title"><%= article.title %></td>
        <td class="admin-article-summary"><%= article.summary %></td>
        <td class="admin-article-author"><%= article.author %></td>
        <td>
          <div class="button-group">
            <form action="/articles/<%= article._id %>/edit" method="GET" class="inline">
              <input type="submit" value="Edit" class="button">
            </form>
            <form action="/articles/<%= article._id %>?_method=DELETE" method="POST" class="inline">
              <input type="submit" value="Delete" class="button">
            </form>
          </div>
        </td>
      </tr>
    <% }) %>
  </tbody>